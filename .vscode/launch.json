{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/libcappy"
            // "justMyCode": true
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "libcappy.cli",
            "args": [
                "bootstrap",
                "example.yml"
            ],
            "sudo": true,
        },
        {
            "name": "Python: TUI",
            "type": "python",
            "request": "launch",
            "module": "libcappy",
            "console": "externalTerminal",
            "sudo": true,
            "args": [
                "-d",
                "-c",
                "${workspaceFolder}/chroot/"
            ]
        }
    ]
}
